<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Owner Page</title>
	<%- include('../bootstrap-css') %>
</head>
<body>
	<%- include('../navbar') %> 
	<div class="container">
		<table id="movie" class="table table-striped table-bordered table-hover" style="width:100%">
			<thead>
				<tr>
					<th>#</th>
					<th>Brand</th>
					<th>Type</th>
					<th>Rental Price</th>
					<th>Status</th>
					<th colspan="2" style="text-align: center;">Action</th>
				</tr>
			</thead>
			<tbody>
				<% data.cars.forEach((e, i) => { %>
					<tr class="table-hover">
						<td><%= i + 1 %> </td>
						<td><%= e.brand %></td>
						<td><%= e.type %></td>
						<td><%= e.decimalFormatting(e.rentalPrice) %></td>
						<td><%= (e.isReady === 'true') ? 'Available' : 'Unavailable' %></td>
						<td style="text-align: center;">
							<button class="btn btn-primary" 
								onclick="location.href='/owner/update/car/<%= e.id %>'">Book</button>
						</td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
	<%- include('../bootstrap-js') %> 
</body>
</html>
<!DOCTYPE html>
<html>
    <head>
        <title>Renter</title>
        <%- include('../bootstrap-css') %>
    </head>
    <body>
        <h1>Booking details</h1>
        <h2>Renter Bio</h2>
        <table class="table table-striped table-bordered table-hover" style="width:100%">
            <tr>
                <th>Name</th>
            </tr>
            <tr>
                <td><%= table.name %> (<%= table.username %> )</td>
            </tr>
        </table>
        <h2>Booking Details</h2>
        <table class="table table-striped table-bordered table-hover" style="width:100%">
            <tr>
                <th>Booking Status</th>
                <th>Rent Status</th>
                <th>Action</th>
            </tr>
            <a href=""></a>
            <tr>
                <td>Payment: <%= table.Booking.paymentStatus %> </td>
                <td>Rent: <%= table.Booking.bookStatus %> </td>
                <td>
                    <a href="#"><%= table.Booking.paymentStatus !== "Paid" ? "Pay bookings" : "" %> </a>
                    <a href="#"><%= (table.Booking.paymentStatus === "Paid" && table.Booking.bookStatus === false) ? "Start rent" : "" %></a>
                    <a href="#"><%= table.Booking.bookStatus === true ? "Update location" : "" %></a>
                    <a href="/renter/bookingdetail/remove">Remove booking</a>
                </td>
            </tr>
        </table>
        
        <h2>Car Details</h2>
        <table class="table table-striped table-bordered table-hover" style="width:100%">
            <tr>
                <th>Brand</th>
                <th>Type</th>
                <th>Owner</th>
            </tr>
            <tr>
                <td><%= table.Booking.Car.brand %> </td>
                <td><%= table.Booking.Car.brand %> </td>
                <td><%= table.Booking.Car.Owner.name %> </td>
            </tr>
        </table>
        <%- include('../bootstrap-js') %> 
    </body>
</html>